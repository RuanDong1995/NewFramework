<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <!-- Base application theme. -->
    <style name="ImageCropTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- FastScrollBar Popup Window Style-->
    <style name="FastPopupWindow">
        <item name="android:windowEnterAnimation">@anim/fast_scroll_show</item>
        <item name="android:windowExitAnimation">@anim/fast_scroll_hide</item>
    </style>

    <!--没有原生背景的弹窗-->
    <style name="NoFrameDialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFrame">@null</item>
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否漂现在activity上 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 是否半透明 -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--分割线-->
    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <!--分割线-->
    <style name="VerticalDivider">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <!--下阴影-->
    <style name="Shadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:background">@drawable/shape_shadow</item>
    </style>

    <!--图片按钮-->
    <style name="ImageButton">
        <item name="android:layout_width">@dimen/toolbar_height</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:background">?actionBarItemBackground</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="TextButton" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minWidth">36dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--文本框-->
    <style name="ClearEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColorHint">@color/textHintColor</item>
        <item name="android:textColor">@color/textColorBlack</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TextTab" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/select_tab_indicator</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/selector_tab_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>